/* components/song-item-v2/index.wxss */
.song-item-v2 {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
  white-space: nowrap;
  overflow: hidden;
}
.index {
  font-size: 30rpx;
  padding: 12rpx;
}
.info {
  flex: 1;
  margin-left: 16rpx;
}
.info .name {
  font-size: 30rpx;
}
.info .source {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.info .source .icon {
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.info .source .dots {
  margin: 0 6rpx;
}