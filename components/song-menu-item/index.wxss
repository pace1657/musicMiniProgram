/* components/song-menu-item/index.wxss */
.song-menu-item {
  display: inline-block;
  width: 100%;
}
.cover {
  position: relative;
}
.cover .image {
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
  vertical-align: bottom;
}
.cover .play-count {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
}
.info {
  width: 100%;
  font-size: 26rpx;
  margin-top: 10rpx;
  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
}