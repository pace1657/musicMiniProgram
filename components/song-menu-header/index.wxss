/* components/song-menu-header/index.wxss */
.song-menu-header {
  width: 100vw;
  position: relative;
  top: 0;
  left: -20rpx;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}
.song-menu-header .bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -9;
}
.song-menu-header .bg-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(5px);
}
.content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}
.content .menu-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}
.content .menu-info {
  position: relative;
  flex: 1;
  height: 220rpx;
  margin-left: 50rpx;
}
.content .title {
  font-size: 32rpx;
  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
}
.content .author {
  display: flex;
  margin-top: 30rpx;
  align-items: center;
}
.content .author .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}
.content .author .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}
.content .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.operation {
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
}
.operation .item {
  display: flex;
  align-items: center;
}
.operation .item .icon {
  width: 48rpx;
  margin-right: 10rpx;
}
.operation .item .text {
  font-size: 28rpx;
}
