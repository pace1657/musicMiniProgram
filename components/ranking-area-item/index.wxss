/* components/ranking-area-item/index.wxss */
.ranking-area-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #eee;
  margin-bottom: 20rpx;
}
.content {
  padding: 24rpx;
  flex: 1;
  overflow: hidden;
}
.content .ranking-name {
  font-size: 34rpx;
}
.content .ranking-list {
  font-size: 24rpx;
  width: 100%;
  margin-top: 6rpx;
}
.content .ranking-list .ranking-list-item {
  color: #333;
  width: 100%;
  margin-top: 6rpx;

  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-emphasis: none;
}
.content .ranking-list .singer {
  color: #999;
}
.album {
  display: flex;
  position: relative;
  width: 220rpx;
}
.album .cover {
  width: 100%;
  height: 100%;
}
.album .play-count {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  font-size: 22rpx;
}