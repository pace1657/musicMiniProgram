/* components/song-item-v1/index.wxss */
.item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.item .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.item .content {
  margin-left: 16rpx;
  flex: 1;
}
.item .content .name {
  font-size: 32rpx;
  color: #555;
}
.item .content .source {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}
.item .arrow .icon {
  width: 50rpx;
  height: 50rpx;
}